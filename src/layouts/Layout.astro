---
// src/layouts/Layout.astro
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { BusinessService } from "../services/business.service";

const business = await BusinessService.getById(1);

---

<!doctype html>
<html lang="en" class="h-full">
  <head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="description" content={business?.slogan} />
  
  <!-- Open Graph -->
  <meta property="og:title" content={business?.name} />
  <meta property="og:description" content={business?.slogan} />
  <meta property="og:type" content="website" />
  
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{business?.name}</title>
</head>
  <body class="h-full">
    <div class="min-h-screen w-full relative bg-[#020617]">
      <div
        class="absolute inset-0 z-0 pointer-events-none"
        style="background-image: radial-gradient(circle 500px at 50% 100px, rgba(236,72,153,0.4), transparent);"
      >
      </div>

      <div class="relative z-10">
        <Header />
        <main><slot /></main>
        <Footer />
      </div>
    </div>
  </body>
</html>
