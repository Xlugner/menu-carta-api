---
import { BusinessService } from '../../services/business.service';

// 1.datos desde la API
const business = await BusinessService.getById(1);
const workingHours = business?.working_hours || [];
---

<div class="text-center md:text-left">
  <h3 class="text-sm font-semibold text-white mb-2">Horario de Atenci√≥n</h3>
  <div class="text-gray-300 space-y-2"> 
    {workingHours.length > 0 ? (
      workingHours.map(day => (
        <div class="text-sm">
          <p class="font-medium">{day.large_day_name}:</p>
          <div class="pl-4"> 
            {day.schedules.length > 0 ? (
              day.schedules.map(schedule => (
                <p>{schedule.from_hour} - {schedule.to_hour}</p>
              ))
            ) : (
              <p>Cerrado</p>
            )}
          </div>
        </div>
      ))
    ) : (
      <p>Horarios no disponibles.</p>
    )}
  </div>
</div>