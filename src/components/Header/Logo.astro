---
// src/components/Header/Logo.astro
import { siteConfig } from "../Navigation/navItems";
import { BusinessService } from "../../services/business.service";

const business = await BusinessService.getById(1);
---

<a
  href="/"
  class="-m-1.5 p-1.5 flex items-center gap-2 hover:opacity-90 transition-opacity"
>
  <!-- Logo -->
  <img
    src={business?.image}
    alt={siteConfig.logoAlt}
    class="h-8 w-auto shrink-0"
  />

  <!-- Nombre siempre visible -->
  <span class="font-bold text-white text-base sm:text-lg pl-2 sm:pl-0">
    {business?.name}
  </span>
</a>
