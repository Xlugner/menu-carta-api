---
// src/components/Header.astro
import Logo from "./Header/Logo.astro";
import MenuIcon from "./Icons/hamburgerIcon.astro";
import ContactInfo from "./Header/ContactInfo.astro";
import StatusBadge from "./Header/StatusBadge.astro";
import MobileMenu from "./Header/MobileMenu.astro";
---

<header class="sticky top-0 z-50 backdrop-blur-md bg-[#020617]/95 shadow-lg border-b border-white/10">
  <nav
    aria-label="Global"
    class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8"
  >
    <!-- Logo -->
    <div class="flex lg:flex-1">
      <Logo />
    </div>
    <div class="hidden lg:flex items-center">
      <!-- Información de contacto -->
      <ContactInfo />

      <!-- Separador vertical -->
      <div class="h-6 w-px bg-gray-400 mx-6"></div>

      <!-- Badge de estado -->
      <StatusBadge />
    </div>

    <!-- Botón menú móvil -->
    <div class="flex lg:hidden">
      <button
        type="button"
        command="show-modal"
        commandfor="mobile-menu"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-white hover:bg-white hover:bg-opacity-10"
      >
        <span class="sr-only">Abrir menú</span>
        <MenuIcon />
      </button>
    </div>
  </nav>

  <MobileMenu />
</header>
